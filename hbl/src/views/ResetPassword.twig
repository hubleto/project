{% extends '@hubleto/layouts/Auth.twig' %}

{% block status %}
  {% if viewParams.error %}
    <div class="alert alert-danger">{{ viewParams.error }}</div>
  {% endif %}

  {% if viewParams.welcome and not viewParams.error %}
    <div class="alert alert-success">{{ translate("Welcome to Hubleto! Set your password to access your dashboard and start using the app.") }}</div>
  {% endif %}
{% endblock %}

{% block inputs %}
  <input
    type="password" name="password" placeholder="{{ translate("New password") }}"
    onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
  />
  <input
    type="password" name="password_confirm" placeholder="{{ translate("Confirm new password") }}"
    onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
  />
{% endblock %}

{% block button %}
  <button type="submit" class="btn btn-large mt-4">
    <span class="icon"><i class="fas fa-arrow-right"></i></span>
    <span class="text">{{ translate("Reset password") }}</span>
  </button>
{% endblock %}

